
  <%= simple_form_for @prospect do |f| %>
  <div class="row">
    <div class="col"> <%= f.input :name %>  </div>
    <div class="col"> <%= f.input :lastname %> </div>
  </div>
  <div class="row">
    <div class="col-8"> <%= f.input :address,
              input_html: { data: { geocoder_target: "address" }, class: "d-none"  },
              wrapper_html: { data: { controller: "geocoder", geocoder_api_key_value: ENV['MAPBOX_API_KEY'] } } %> </div>
    <div class="col"> <%= f.input :cellphone %> </div>
  </div>
  <div class="row">
    <div class="col"> <%= f.input :email %> </div>
  <div>
    <%= f.input :photo, as: :file %>
    <%= f.association :status, label_method: :status, prompt: 'Elige el status' %>
    <%= f.submit %>
  <% end %>
